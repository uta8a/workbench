{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  timezone: 'Asia/Tokyo',
  minimumReleaseAge: '3 days',
  schedule: [
    'on monday',
  ],
  packageRules: [
    {
      matchManagers: [
        'mise',
        'docker-compose',
        'dockerfile',
        'gomod',
      ],
      groupName: 'all-dependencies',
      description: 'Group updates for mise, docker, and go.mod',
    },
    {
      matchManagers: [
        'npm',
      ],
      matchFileNames: [
        'linear-tools/**',
      ],
      groupName: 'linear-tools-dependencies',
      description: 'Group npm updates for linear-tools',
    },
  ],
}
